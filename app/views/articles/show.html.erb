

<div class="article">
    <h2><%= @article.title %>
      <small>
        <%= link_to edit_article_path(@article) do %>
          <i class="fa fa-pencil" aria-hidden="true"></i>
        <% end %>
      </small>
      <small>
        <%= link_to article_path(@article), method: :delete,
            data: { confirm: "Are you sure?" }  do %>
          <i class="fa fa-trash-o" aria-hidden="true"></i>
        <% end %>
      </small>
    </h2>
    <hr>
    <%= @article.content %>

</div>







